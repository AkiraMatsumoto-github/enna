---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

const basicPrice = {
  price: '2,500',
  unit: '円 / 1時間',
  conditions: ['最低利用時間: 3時間〜', '対象年齢: 0歳〜小学生']
};

const options = [
  { label: '土日祝日利用', price: '+20%割増' },
  { label: '病児・病後児保育', price: '+500円 / 1時間' },
  { label: '兄弟姉妹追加', price: '+500円 / 1時間（1人あたり）' },
  { label: '早朝・夜間 (8:00前 / 18:00以降)', price: '+20%割増' },
  { label: '交通費', price: '実費請求' },
];
---

<Layout title="料金・サービス | enna">
	<Header />
	
	<main class="flex-1 pt-16">
        <!-- Page Title -->
        <div class="bg-brand-light/30 py-12 text-center">
            <h1 class="text-3xl font-bold text-brand-accent tracking-widest mb-2 font-en">SERVICE & PRICE</h1>
            <p class="text-sm text-brand-text/70">料金・サービス</p>
        </div>

        <div class="max-w-screen-md mx-auto px-5 py-20">
            <!-- Pricing Main -->
            <div class="bg-white rounded-3xl shadow-sm border border-brand-light overflow-hidden mb-16">
                <div class="bg-brand-main text-white text-center py-4 font-bold tracking-wider">ベーシックプラン</div>
                <div class="p-8 md:p-12 text-center">
                    <div class="flex items-end justify-center gap-1 mb-6 text-brand-accent">
                        <span class="text-5xl font-bold tracking-tight">{basicPrice.price}</span>
                        <span class="text-lg pb-2 font-medium">{basicPrice.unit}</span>
                    </div>
                    <ul class="inline-block text-left space-y-2 mb-8">
                        {basicPrice.conditions.map((item) => (
                            <li class="flex items-center gap-2 text-sm text-brand-text/80">
                                <span class="text-brand-main">●</span>
                                {item}
                            </li>
                        ))}
                    </ul>
                    <p class="text-xs text-gray-400 text-center">※ 料金は全て税込表示です。</p>
                </div>
            </div>

            <!-- Options Table -->
            <div class="mb-16">
                <div class="text-center mb-10">
                    <h2 class="text-xl font-bold text-brand-accent mb-2">オプション料金</h2>
                    <div class="h-0.5 w-10 bg-brand-main mx-auto"></div>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-brand-light overflow-hidden">
                    {options.map((option, index) => (
                        <div class={`flex flex-col md:flex-row justify-between items-center p-4 md:p-6 ${index !== options.length - 1 ? 'border-b border-brand-light' : ''}`}>
                            <div class="font-bold text-brand-accent mb-1 md:mb-0">{option.label}</div>
                            <div class="text-brand-main font-bold">{option.price}</div>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Link to Activity -->
            <div class="bg-brand-base rounded-2xl p-8 md:p-12 text-center border-2 border-brand-light border-dashed">
                <h2 class="text-2xl font-bold text-brand-accent mb-4">
                    <span class="text-brand-main">enna</span>だけの<br class="md:hidden">特別な体験
                </h2>
                <p class="text-brand-text leading-relaxed mb-8">
                    通常のシッティングだけでなく、知育遊びや製作などの<br>
                    アクティビティオプションもご用意しております。
                </p>
                <a href="/activity" class="inline-block bg-white text-brand-main border-2 border-brand-main font-bold py-3 px-8 rounded-full hover:bg-brand-main hover:text-white transition-all shadow-sm">
                    アクティビティ詳細を見る
                </a>
            </div>
        </div>
    </main>

	<Footer />
</Layout>
